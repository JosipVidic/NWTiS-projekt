<?xml version='1.0' encoding='UTF-8'?>
<faces-config version="2.2"
              xmlns="http://xmlns.jcp.org/xml/ns/javaee"
              xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
              xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-facesconfig_2_2.xsd">
    <application>
        <resource-bundle>
            <base-name>org.foi.nwtis.jovidic.i18n</base-name>
            <var>i18n</var>
        </resource-bundle>
        <locale-config>
            <default-locale>hr</default-locale>
            <supported-locale>en</supported-locale>
            <supported-locale>de</supported-locale>
        </locale-config>        
    </application>
    <navigation-rule>
        <from-view-id>/index.xhtml</from-view-id>
        <navigation-case>
            <from-action>#{lokalizacija.odaberiJezik}</from-action>
            <from-outcome>OK</from-outcome>
            <to-view-id>/public/odabir.xhtml</to-view-id>
        </navigation-case>
    </navigation-rule>
    <navigation-rule>
        <from-view-id>/public/emailPostavke.xhtml</from-view-id>

        <navigation-case>
            <from-outcome>NOT_OK</from-outcome>
            <to-view-id>/public/neuspjesnaAutentikacija.xhtml</to-view-id>
            
        </navigation-case>
        <navigation-case>
            <from-outcome>citaj</from-outcome>
            <to-view-id>/public/pregledSvihPoruka.xhtml</to-view-id>
            
        </navigation-case>
        <navigation-case>
            <from-outcome>NOT_OK</from-outcome>
            <to-view-id>/public/neuspjesnaAutentikacija.xhtml</to-view-id>
            
        </navigation-case>
        <navigation-case>
            <from-outcome>povratak</from-outcome>
            <to-view-id>/index.xhtml</to-view-id>
        </navigation-case>
    </navigation-rule>
    <navigation-rule>
        <from-view-id>/public/pregledSvihPoruka.xhtml</from-view-id>
        <navigation-case>
            <from-outcome>prethodna</from-outcome>
            <to-view-id>/public/pregledSvihPoruka.xhtml</to-view-id>
        </navigation-case>
        <navigation-case>
            <from-action>#{pregledSvihPoruka.odaberiMapu()}</from-action>
            <from-outcome>promjenaMape</from-outcome>
            <to-view-id>/public/pregledSvihPoruka.xhtml</to-view-id>
        </navigation-case>
        <navigation-case>
            <from-action>#{pregledSvihPoruka.pregledPoruke()}</from-action>
            <from-outcome>PORUKA</from-outcome>
            <to-view-id>/public/pregledPoruke.xhtml</to-view-id>
        </navigation-case>
        <navigation-case>
            <from-outcome>odabirJezikaNatrag</from-outcome>
            <to-view-id>/index.xhtml</to-view-id>
            <redirect/>
        </navigation-case>
        <navigation-case>
            <from-outcome>emailPostavkeNatrag</from-outcome>
            <to-view-id>/public/emailPostavke.xhtml</to-view-id>
            <redirect/>
        </navigation-case>
        <navigation-case>
            <from-outcome>sljedeca</from-outcome>
            <to-view-id>/public/pregledSvihPoruka.xhtml</to-view-id>
        </navigation-case>
    </navigation-rule>
    <navigation-rule>
        <from-view-id>/public/pregledPoruke.xhtml</from-view-id>
        <navigation-case>
            <from-outcome>pregledSvih</from-outcome>
            <to-view-id>/public/pregledSvihPoruka.xhtml</to-view-id>
        </navigation-case>
    </navigation-rule>
    <navigation-rule>
        <from-view-id>/public/odabir.xhtml</from-view-id>
        <navigation-case>
            <from-outcome>email</from-outcome>
            <to-view-id>/public/emailPostavke.xhtml</to-view-id>
        </navigation-case>
        <navigation-case>
            <from-outcome>adrese</from-outcome>
            <to-view-id>/public/adresePrikaz.xhtml</to-view-id>
        </navigation-case>
        <navigation-case>
            <from-outcome>meteoAdresa</from-outcome>
            <to-view-id>/public/meteoAdresaPrikaz.xhtml</to-view-id>
        </navigation-case>
        <navigation-case>
            <from-outcome>test</from-outcome>
            <to-view-id>/public/sviMeteo.xhtml</to-view-id>
        </navigation-case>
        <navigation-case>
            <from-outcome>login</from-outcome>
            <to-view-id>/login.xhtml</to-view-id>
        </navigation-case>
        <navigation-case>
            <from-outcome>registracija</from-outcome>
            <to-view-id>/public/registracija.xhtml</to-view-id>
        </navigation-case>
        <navigation-case>
            <from-outcome>private</from-outcome>
            <to-view-id>/private/private.xhtml</to-view-id>
        </navigation-case>
        <navigation-case>
            <from-outcome>vazeci</from-outcome>
            <to-view-id>/public/zadnjiVazeci.xhtml</to-view-id>
        </navigation-case>
    </navigation-rule>
    <navigation-rule>
        <from-view-id>/public/neuspjesnaAutentikacija.xhtml</from-view-id>
        <navigation-case>
            <from-outcome>odabirAdresa</from-outcome>
            <to-view-id>/public/emailPostavke.xhtml</to-view-id>
        </navigation-case>
    </navigation-rule>
      <navigation-rule>
        <from-view-id>/login.xhtml</from-view-id>
        <navigation-case>
            <from-action>#{login.loginUser()}</from-action>
            <from-outcome>OK</from-outcome>
            <to-view-id>/private/private.xhtml</to-view-id>
        </navigation-case>
        <navigation-case>
            <from-action>#{login.loginUser()}</from-action>
            <from-outcome>NOT</from-outcome>
            <to-view-id>/public/neuspjesanLogin.xhtml</to-view-id>
        </navigation-case>

    </navigation-rule>
    <navigation-rule>
        <from-view-id>/public/neuspjesanLogin.xhtml</from-view-id>
        <navigation-case>
            <from-outcome>loginNatrag</from-outcome>
            <to-view-id>/login.xhtml</to-view-id>
        </navigation-case>
    </navigation-rule>
    <navigation-rule>
        <from-view-id>/public/registracija.xhtml</from-view-id>
        <navigation-case>
            <from-outcome>OK</from-outcome>
            <to-view-id>/login.xhtml</to-view-id>
        </navigation-case>
        <navigation-case>
            <from-outcome>NOT</from-outcome>
            <to-view-id>/public/neuspjesnaRegistracija.xhtml</to-view-id>
        </navigation-case>
    </navigation-rule>
    <navigation-rule>
        <from-view-id>/public/neuspjesnaRegistracija.xhtml</from-view-id>
        <navigation-case>
            <from-outcome>registracijaNatrag</from-outcome>
            <to-view-id>/public/registracija.xhtml</to-view-id>
        </navigation-case>
    </navigation-rule>
    <navigation-rule>
        <from-view-id>/private/private.xhtml</from-view-id>
        <navigation-case>
            <from-outcome>public</from-outcome>
            <to-view-id>/public/odabir.xhtml</to-view-id>
        </navigation-case>
    </navigation-rule>
</faces-config>
